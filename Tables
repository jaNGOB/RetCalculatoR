library(tidyverse)
library(pixidust)
library(kableExtra)

fit <- lm(mpg ~ qsec + factor(am) + wt + factor(gear), data = mtcars)

dust(fit) %>%
  sprinkle(col = 2:4, round = 3) %>%
  sprinkle(col = 5, fn = quote(pvalString(value))) %>%
  sprinkle_colnames(pct_change = "Percentage Change",
                    returns = "Returns",
                    total_return = "Total REturns",
                    cagr = "CAGR",
                    drawdown = "Drawdown",
                    maxdrawdown = "Maximum Drawdown",
                    comp = "Compounded Returns",
                    aggregate_returns ="Aggregate Returns",
                    avg_return = "Average Returns",
                    avg_win = "Average Win",
                    avg_loss ="Average Loss",
                    sharpe = "Sharpe Ratio",
                    sortino = "Sortino Ratio",
                    adj_sortino = "Adjusted Sortino Ratio",
                    best = "Best Return",
                    worst = "Worst Return",
                    volatility = "Volatility") %>%
  kable() %>%
  kable_styling()
